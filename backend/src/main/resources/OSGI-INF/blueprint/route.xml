    <!--CAMEL-->
    <camelContext id="trxresearch-ui-backend-context" xmlns="http://camel.apache.org/schema/blueprint">
        <route id="trxresearch-ui-backend-authenticate-route">
            <from uri="servlet:///authenticate?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>

            <process ref="credentialsSaver" />
            <log loggingLevel="INFO" logName="su.msk.jet.nspk" message="trxresearch-ui-backend-authenticate=route -> done"/>
            <marshal>
                <json library="Jackson" unmarshalTypeName="su.msk.jet.nspk.model.User"/>
            </marshal>
        </route>

        <route id="trxresearch-ui-backend-search-route">
            <from uri="servlet:///searchService?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>
            <process ref="credentialsApplier" />
            <log loggingLevel="INFO" logName="su.msk.jet.nspk" message="trxresearch-ui-backend-route -> done"/>
            <recipientList>
                <simple>
                    http://{{nspk-search-service.host}}:{{nspk-search-service.port}}{{nspk-search-service.ctx}}/auth?authMethod=Basic&amp;authUsername=${header.NspkSearchServiceUsername}&amp;authPassword=${header.NspkSearchServicePassword}&amp;httpClient.authenticationPreemptive=true&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false
                </simple>
            </recipientList>
        </route>

        <route id="trxresearch-ui-backend-details-route">
            <from uri="servlet:///detailsService?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>
            <process ref="credentialsApplier" />
            <log loggingLevel="INFO" logName="su.msk.jet.nspk" message="trxresearch-ui-backend-route -> done"/>
            <recipientList>
                <simple>
                    http://{{nspk-search-service.host}}:{{nspk-search-service.port}}{{nspk-details-service.ctx}}/auth?authMethod=Basic&amp;authUsername=${header.NspkSearchServiceUsername}&amp;authPassword=${header.NspkSearchServicePassword}&amp;httpClient.authenticationPreemptive=true&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false
                </simple>
            </recipientList>
        </route>
    </camelContext>
