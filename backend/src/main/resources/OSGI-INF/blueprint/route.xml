    <!--CAMEL-->
    <camelContext id="trxresearch-ui-backend-context" trace="true" xmlns="http://camel.apache.org/schema/blueprint">
        <camel:route id="trxui-authenticate">
            <camel:from uri="servlet:///authenticate?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>

            <camel:process ref="credentialsSaver"/>
            <camel:log loggingLevel="INFO" logName="su.msk.jet.nspk"
                       message="trxresearch-ui-backend-authenticate=route -> done"/>
            <camel:marshal>
                <camel:json library="Jackson" unmarshalTypeName="su.msk.jet.nspk.model.User"/>
            </camel:marshal>
        </camel:route>

        <camel:route id="trxui-search">
            <camel:from uri="servlet:///searchService?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>
            <camel:process ref="credentialsApplier"/>
            <camel:log loggingLevel="INFO" logName="su.msk.jet.nspk" message="trxresearch-ui-backend-route -> done"/>
            <camel:recipientList>
                <camel:simple>
                    http://{{nspk-search-service.host}}:{{nspk-search-service.port}}{{nspk-search-service.ctx}}/auth?authMethod=Basic&amp;authUsername=${header.NspkSearchServiceUsername}&amp;authPassword=${header.NspkSearchServicePassword}&amp;httpClient.authenticationPreemptive=true&amp;bridgeEndpoint=true&amp;throwExceptionOnFailure=false
                </camel:simple>
            </camel:recipientList>
        </camel:route>

        <camel:route id="trxui-details">
            <camel:from uri="servlet:///detailsService?servletName=CamelServlet&amp;matchOnUriPrefix=true"/>
            <camel:process ref="credentialsApplier"/>
            <camel:setHeader headerName="CamelHttpUri">
                <camel:simple>http://{{nspk-search-service.host}}:{{nspk-search-service.port}}{{nspk-details-service.ctx}}/auth?authMethod=Basic&amp;authUsername=${header.NspkSearchServiceUsername}&amp;authPassword=${header.NspkSearchServicePassword}&amp;httpClient.authenticationPreemptive=true&amp;throwExceptionOnFailure=false</camel:simple>
            </camel:setHeader>
            <camel:log loggingLevel="INFO" logName="su.msk.jet.nspk" message="trxresearch-ui-backend-route -> done"/>
            <camel:to
                    uri="http://stubPath:stubPort"/>
            <camel:process ref="jsonToExt"/>
        </camel:route>
    </camelContext>
</blueprint>
